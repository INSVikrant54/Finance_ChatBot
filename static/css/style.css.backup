/* Progress Bar Animations */
.progress {
    height: 25px;
    border-radius: 15px;
    background-color: rgba(189, 195, 199, 0.2);
    box-shadow: inset 0 2px 5px rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.progress-bar {
    transition: width 1.5s cubic-bezier(0.68, -0.55, 0.265, 1.55);
    background: linear-gradient(90deg, #7f8c8d 0%, #34495e 100%);
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    animation: progressSlide 2s ease-out;
    position: relative;
    overflow: hidden;
}

.progress-bar::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 2s infinite;
}

/* Badge Styles */
.badge {
    padding: 6px 12px;
    border-radius: 20px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
}

.badge:hover {
    transform: scale(1.1);
}

.badge.bg-primary {
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%) !important;
}

.badge.bg-success {
    background: linear-gradient(135deg, #7f8c8d 0%, #5f6f7a 100%) !important;
}

.badge.bg-danger {
    background: linear-gradient(135deg, #636e72 0%, #34495e 100%) !important;
}

/* Chat Container */
.chat-container {
    height: 400px;
    overflow-y: auto;
    padding: 20px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
}

/* Auth Container */
.auth-container {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    padding: 20px;
    animation: fadeIn 0.8s ease-out;
}

.auth-card {
    background: rgba(255, 255, 255, 0.95);
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 15px 50px rgba(44, 62, 80, 0.3);
    max-width: 450px;
    width: 100%;
    backdrop-filter: blur(10px);
    animation: cardZoomIn 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
}

/* Form Styles */
.form-control, .form-select {
    border-radius: 10px;
    border: 2px solid rgba(189, 195, 199, 0.3);
    padding: 12px;
    transition: all 0.3s ease;
}

.form-control:focus, .form-select:focus {
    border-color: #7f8c8d;
    box-shadow: 0 0 0 0.2rem rgba(127, 140, 141, 0.25);
    transform: scale(1.02);
}

/* Scrollbar Styles */
::-webkit-scrollbar {
    width: 10px;
    height: 10px;
}

::-webkit-scrollbar-track {
    background: rgba(189, 195, 199, 0.2);
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background: linear-gradient(135deg, #7f8c8d 0%, #34495e 100%);
    border-radius: 10px;
    transition: all 0.3s ease;
}

::-webkit-scrollbar-thumb:hover {
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
}

/* ========================================
   ANIMATIONS
   ======================================== */

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes slideDown {
    from {
        transform: translateY(-100%);
        opacity: 0;
    }
    to {
        transform: translateY(0);
        opacity: 1;
    }
}

@keyframes cardSlideIn {
    from {
        opacity: 0;
        transform: translateY(50px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

@keyframes cardZoomIn {
    from {
        opacity: 0;
        transform: scale(0.8);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes modalZoomIn {
    from {
        opacity: 0;
        transform: scale(0.7);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes progressSlide {
    from {
        width: 0;
    }
}

@keyframes shimmer {
    0% {
        left: -100%;
    }
    100% {
        left: 100%;
    }
}

@keyframes float {
    0%, 100% {
        transform: translateY(0);
    }
    50% {
        transform: translateY(-10px);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .card {
        margin-bottom: 1rem;
        border-radius: 10px;
    }
    
    .chat-message {
        max-width: 90%;
    }
    
    .auth-card {
        padding: 30px 20px;
    }
    
    .btn {
        padding: 10px 20px;
        font-size: 0.9rem;
    }
    
    .card:hover {
        transform: translateY(-5px) scale(1.01);
    }
}
